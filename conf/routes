# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.home
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

#Linking the css
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Map static resources from the /public folder to the /assets URL path
#GET    /assets/public/stylesheets/*file    controllers.Assets.at(path="public/stylesheets", file)

#GET   /assets/stylesheets/bootstrap.css    controllers.Assets.at(path="/public", file="/stylesheets/bootstrap.css")

#GET  /assets/stylesheets/bootstrap.min.css    controllers.Assets.at(path="/public", file="/stylesheets/bootstrap.min.css")
#GET /assets/modern-business.css    controllers.Assets.at(path="/public", file="/stylesheets/modern-business.css")




#The Home page
GET     /home                           controllers.HomeController.home

#The clubs page
GET     /clubs                           controllers.HomeController.clubs

#The About us page
GET     /about                           controllers.HomeController.about


#The Whats On Page
GET     /whatson                           controllers.HomeController.whatson

#The Contact Us page
GET     /contact                           controllers.HomeController.contact
